<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>aitalk</artifactId>
        <groupId>com.aihangxunxi.aitalk</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>aitalk-im</artifactId>

    <profiles>
        <profile>
            <id>develop</id>
            <activation>
                <!-- activate if system properties 'env=develop' -->
                <property>
                    <name>env</name>
                    <value>develop</value>
                </property>
                <!-- this profile is active by default -->
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <env>develop</env>
                <server.ssl>false</server.ssl>
                <server.bossGroupThreads>2</server.bossGroupThreads>
                <server.workerGroupThreads>4</server.workerGroupThreads>
                <server.processorGroupThreads>2</server.processorGroupThreads>
            </properties>
        </profile>
        <profile>
            <id>review</id>
            <activation>
                <!-- activate if system properties 'env=review' -->
                <property>
                    <name>env</name>
                    <value>review</value>
                </property>
                <!-- this profile is active by default -->
                <!--<activeByDefault>true</activeByDefault>-->
            </activation>
            <properties>
                <env>review</env>
                <server.ssl>false</server.ssl>
                <server.bossGroupThreads>2</server.bossGroupThreads>
                <server.workerGroupThreads>4</server.workerGroupThreads>
                <server.processorGroupThreads>2</server.processorGroupThreads>
            </properties>
        </profile>
        <profile>
            <id>staging</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>staging</value>
                </property>
            </activation>
            <properties>
                <env>staging</env>
                <server.ssl>false</server.ssl>
                <server.bossGroupThreads>2</server.bossGroupThreads>
                <server.workerGroupThreads>4</server.workerGroupThreads>
                <server.processorGroupThreads>2</server.processorGroupThreads>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>production</value>
                </property>
            </activation>
            <properties>
                <env>production</env>
                <server.ssl>false</server.ssl>
                <server.bossGroupThreads>2</server.bossGroupThreads>
                <server.workerGroupThreads>4</server.workerGroupThreads>
                <server.processorGroupThreads>2</server.processorGroupThreads>
            </properties>
        </profile>
    </profiles>
</project>